  #   update_interval: 30s
  #   health_check_path: /health
  #   timeout: 5s

  # Server management configuration (not currently used)
  # server_management:
  #   auto_registration: true
  #   heartbeat_interval: 60s
  #   heartbeat_timeout: 300s
  #   max_servers_per_customer: 100
  #   enable_server_validation: true

  # Customer management configuration (not currently used)
  # customer_management:
