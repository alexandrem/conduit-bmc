# BMC Manager Service Environment Variables
# Copy this file to manager.env and set appropriate values

# =============================================================================
# REQUIRED - Security
# =============================================================================
JWT_SECRET_KEY=your-super-secret-jwt-key-at-least-32-characters-long
# Generate with: openssl rand -hex 32

# =============================================================================
# REQUIRED - Database
# =============================================================================
DATABASE_URL=file:./manager.db
# Examples:
#   SQLite: file:./manager.db
#   PostgreSQL: postgres://user:pass@localhost/bmcdb

# =============================================================================
# Service Configuration
# =============================================================================
MANAGER_HOST=0.0.0.0
MANAGER_PORT=8080

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=info
# Options: trace, debug, info, warn, error, fatal, panic

LOG_FORMAT=json
# Options: json, console

DEBUG=false
# Set to true for debug logging (overrides LOG_LEVEL)

# =============================================================================
# TLS (optional, for production)
# =============================================================================
# TLS_ENABLED=true
# TLS_CERT_FILE=/path/to/cert.pem
# TLS_KEY_FILE=/path/to/key.pem
# TLS_CA_FILE=/path/to/ca.pem
