# BMC Gateway Service Environment Variables
# Copy this file to gateway.env and set appropriate values

# =============================================================================
# REQUIRED - Manager Connection
# =============================================================================
BMC_MANAGER_ENDPOINT=http://localhost:8080

# =============================================================================
# Service Configuration
# =============================================================================
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8081

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=info
# Options: trace, debug, info, warn, error, fatal, panic

LOG_FORMAT=json
# Options: json, console

DEBUG=false
# Set to true for debug logging (overrides LOG_LEVEL)

# =============================================================================
# Optional - JWT Secret (only needed if validating tokens locally)
# =============================================================================
# JWT_SECRET_KEY=dev-jwt-secret-key-for-local-development-only-not-for-production

# =============================================================================
# TLS (optional, for production)
# =============================================================================
# TLS_ENABLED=true
# TLS_CERT_FILE=/path/to/cert.pem
# TLS_KEY_FILE=/path/to/key.pem
# TLS_CA_FILE=/path/to/ca.pem
