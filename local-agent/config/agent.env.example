# BMC Local Agent Environment Variables
# Copy this file to agent.env and set appropriate values

# =============================================================================
# REQUIRED - Agent Identification
# =============================================================================
AGENT_ID=agent-001
AGENT_DATACENTER_ID=dc-local-01

# =============================================================================
# REQUIRED - Gateway Connection
# =============================================================================
AGENT_GATEWAY_ENDPOINT=http://localhost:8081

# =============================================================================
# REQUIRED - Security
# =============================================================================
AGENT_ENCRYPTION_KEY=your-super-secret-encryption-key-32-chars
# Generate with: openssl rand -hex 32

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=info
# Options: trace, debug, info, warn, error, fatal, panic

LOG_FORMAT=json
# Options: json, console

DEBUG=false
# Set to true for debug logging (overrides LOG_LEVEL)

# =============================================================================
# TLS (optional, for production)
# =============================================================================
# TLS_ENABLED=true
# TLS_CERT_FILE=/path/to/cert.pem
# TLS_KEY_FILE=/path/to/key.pem
# TLS_CA_FILE=/path/to/ca.pem
